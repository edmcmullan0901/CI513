import sys
import os
import pandas as pd

# Add root to sys.path
sys.path.append(os.path.abspath(os.path.join(os.path.dirname(__file__), "..")))

from src.plot_utils import plot_energy_by_building_type

# Paths
data_path = os.path.join(os.path.dirname(__file__), "..", "data", "processed_data.csv")
output_path = os.path.join(os.path.dirname(__file__), "..", "outputs", "figures", "energy_by_building_type.png")

os.makedirs(os.path.dirname(output_path), exist_ok=True)

# Run
df = pd.read_csv(data_path)
plot_energy_by_building_type(df, save_path=output_path)
